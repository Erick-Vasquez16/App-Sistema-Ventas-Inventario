@using System.Globalization;
@model InventarioVentas.ViewModel.VentaViewModel

<div class="container">
    <h2 class="text-center my-4">Lista de Ventas</h2>
    <div class="row">
        <!-- Filtro de fechas -->
        <div class="col-md-4">
            <div class="card p-3 mb-4 shadow-sm">
                <h4 class="card-title">Filtrar Ventas</h4>
                <form method="get" asp-controller="Venta" asp-action="Lista">
                    <div class="form-group">
                        <label for="fechaInicio">Fecha Inicio</label>
                        <input type="date" class="form-control" id="fechaInicio" name="fechaInicio" value="@Model.FechaInicio?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="form-group">
                        <label for="fechaFin">Fecha Fin</label>
                        <input type="date" class="form-control" id="fechaFin" name="fechaFin" value="@Model.FechaFin?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary">Filtrar por Fecha</button>
                        <a href="@Url.Action("Lista", "Venta")" class="btn btn-secondary">Limpiar Filtros</a>
                    </div>
                </form>
                <a asp-controller="Venta" asp-action="Nuevo" class="btn btn-success mt-3">Nueva Venta</a>
            </div>
        </div>

        <!-- Tabla de ventas -->
        <div class="col-md-8">
            <div class="card p-3 mb-4 shadow-sm">
                <h4 class="card-title">Ventas Registradas</h4>
                <table class="table table-striped table-bordered table-hover mt-3" id="ventasTable">
                    <thead class="thead-dark text-center">
                        <tr>
                            <th>Id</th>
                            <th>Id Producto</th>
                            <th>Nombre</th>
                            <th>Fecha</th>
                            <th>Precio Producto</th>
                            <th>Cantidad</th>
                            <th>Total</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Ventas)
                        {
                            <tr class="align-middle">
                                <td class="text-center">@item.IdVenta</td>
                                <td class="text-center">@item.IdProducto</td>
                                <td>@item.NombreProducto</td>
                                <td class="text-center">@item.Fecha.ToString("yyyy-MM-dd")</td>
                                <td class="text-right">@item.PrecioProducto.ToString("C", CultureInfo.CreateSpecificCulture("en-US"))</td>
                                <td class="text-center">@item.Cantidad</td>
                                <td class="text-right">@item.Total.ToString("C", CultureInfo.CreateSpecificCulture("en-US"))</td>
                                <td class="text-center">
                                    <a asp-controller="Venta" asp-action="Editar" asp-route-id="@item.IdVenta" class="btn btn-outline-primary btn-sm mx-1">
                                        <i class="fas fa-edit"></i> 
                                    </a>
                                    <a asp-controller="Venta" asp-action="Eliminar" asp-route-id="@item.IdVenta" onclick="confirmar(event, '@Url.Action("Eliminar", "Venta", new { id = item.IdVenta })')" class="btn btn-outline-danger btn-sm mx-1">
                                        <i class="fas fa-trash-alt"></i> 
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Controles de paginación -->
                <nav>
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= Model.Pagination.TotalPages; i++)
                        {
                            <li class="page-item @(Model.Pagination.CurrentPage == i ? "active" : "")">
                                <a class="page-link" asp-controller="Venta" asp-action="Lista" asp-route-page="@i" asp-route-fechaInicio="@Model.FechaInicio?.ToString("yyyy-MM-dd")" asp-route-fechaFin="@Model.FechaFin?.ToString("yyyy-MM-dd")">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmar(event, url) {
        event.preventDefault(); // Evita la redirección inmediata

        Swal.fire({
            title: "¿Está seguro?",
            text: "¡No podrás revertir esto!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Sí, eliminarlo!",
            cancelButtonText: "Cancelar"
        }).then((result) => {
            if (result.isConfirmed) {
                // Redirigir a la URL de eliminación
                window.location.href = url;
            }
        });
    }
</script>
