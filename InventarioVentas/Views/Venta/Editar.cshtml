@model InventarioVentas.Models.Venta;

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <!-- Tarjeta para el formulario -->
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white text-center">
                    <h3>Editar Venta</h3>
                </div>
                <div class="card-body">
                    <form id="editarVentaForm" asp-controller="Venta" asp-action="Editar" method="post">
                        <input asp-for="IdVenta" type="hidden" />

                        <!-- Selección de ID del Producto -->
                        <div class="mb-3">
                            <label for="IdProducto" class="form-label">ID del Producto</label>
                            <select class="form-select" asp-for="IdProducto" asp-items="ViewBag.Producto">
                                <option value="">Seleccionar ID del Producto</option>
                            </select>
                        </div>

                        <!-- Selección de Nombre del Producto -->
                        <div class="mb-3">
                            <label for="NombreProducto" class="form-label">Nombre del Producto</label>
                            <select class="form-select" asp-for="NombreProducto" asp-items="ViewBag.NombreProducto">
                                <option value="">Seleccionar Producto</option>
                            </select>
                        </div>

                        <!-- Fecha de la Venta -->
                        <div class="mb-3">
                            <label asp-for="Fecha" class="form-label">Fecha</label>
                            <input class="form-control" asp-for="Fecha" type="date" />
                        </div>

                        <!-- Precio del Producto -->
                        <div class="mb-3">
                            <label asp-for="PrecioProducto" class="form-label">Precio del Producto</label>
                            <input class="form-control" asp-for="PrecioProducto" type="number" id="precioProducto" oninput="calcularTotal()" placeholder="Ingrese el precio del producto" />
                        </div>

                        <!-- Cantidad del Producto -->
                        <div class="mb-3">
                            <label asp-for="Cantidad" class="form-label">Cantidad</label>
                            <input class="form-control" asp-for="Cantidad" type="number" id="cantidadProducto" oninput="calcularTotal()" placeholder="Ingrese la cantidad" />
                        </div>

                        <!-- Total Calculado -->
                        <div class="mb-3">
                            <label asp-for="Total" class="form-label">Total</label>
                            <input class="form-control" asp-for="Total" type="number" id="totalProducto" readonly />
                        </div>

                        <!-- Botones de acción -->
                        <div class="d-flex justify-content-between mt-4">
                            <button class="btn btn-primary" type="button" onclick="mostrarAlertaGuardar()"><i class="fas fa-save"></i> Guardar</button>
                            <a href="#" class="btn btn-secondary" onclick="confirmarVolver(event)"><i class="fas fa-arrow-left"></i> Volver</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Incluir SweetAlert2 desde CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Incluir FontAwesome desde CDN -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
<script src="~/js/alerteditarventa.js"></script>
