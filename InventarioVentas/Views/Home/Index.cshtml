<!--para que muestre el nombre del usuario que ha iniciado sesion-->
@using System.Security.Claims;
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Menu";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/css/backgroud.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/InventarioVentas.styles.css" asp-append-version="true" />
</head>
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container-fluid">
            <!-- Logo o marca -->
            <a class="navbar-brand text-primary fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fas fa-warehouse me-2"></i> InventarioVentas
            </a>
                <!-- Botón de Cerrar Sesión alineado a la derecha -->
                <ul class="navbar-nav">
                    <li class="nav-item ms-auto">
                        <a class="btn btn-outline-danger fw-bold" asp-area="" asp-controller="Home" asp-action="Salir">
                            <i class="fas fa-sign-out-alt me-1"></i> Cerrar Sesión
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="container text-center">

        <!-- Mostrar nombre del usuario autenticado -->
        @if (User.Identity.IsAuthenticated)
        {
            <h1 class="display-3 text-primary mb-5">
                Bienvenido, <span class="fw-bold">@User.Claims.Where(c => c.Type == ClaimTypes.Name).Select(c => c.Value).SingleOrDefault()</span>
            </h1>
        }

        <!-- Sección de cards estilo botones centrados -->
        <div class="row justify-content-center mt-4">
            <!-- Card de Productos -->
            <div class="col-md-6 col-lg-4 mb-5">
                <a href="@Url.Action("Lista", "Producto")" class="text-decoration-none">
                    <div class="card h-100 shadow-lg border-light">
                        <div class="card-body text-center">
                            <i class="fas fa-boxes fa-4x text-success mb-4"></i>
                            <h4 class="card-title text-dark">Productos</h4>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Card de Ventas -->
            <div class="col-md-6 col-lg-4 mb-5">
                <a href="@Url.Action("Lista", "Venta")" class="text-decoration-none">
                    <div class="card h-100 shadow-lg border-light">
                        <div class="card-body text-center">
                            <i class="fas fa-cash-register fa-4x text-warning mb-4"></i>
                            <h4 class="card-title text-dark">Ventas</h4>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Card de Ventas Realizadas -->
            <div class="col-md-6 col-lg-4 mb-5">
                <a href="@Url.Action("TotalVendido", "Venta")" class="text-decoration-none">
                    <div class="card h-100 shadow-lg border-light">
                        <div class="card-body text-center">
                            <i class="fas fa-receipt fa-4x text-danger mb-4"></i>
                            <h4 class="card-title text-dark">Ventas Realizadas</h4>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>